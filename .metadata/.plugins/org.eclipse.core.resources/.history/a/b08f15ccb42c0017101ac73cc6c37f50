package it.unibo.mybutton;

import java.awt.Button;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
/*
 * ----------------------------------------------------------------
 * GOAL: an ActionListener that keeps track of the last event
 * ----------------------------------------------------------------
 */
public class ButtonWithGui implements ActionListener, IButton {
	
	private Mybutton myButton = null;
	private String command;
	private int pinNum;
	
	public ButtonWithGui(Mybutton button, String command, int pinNum){
		this.command = command;
		this.myButton = button;
		this.pinNum = pinNum;
		btnGui      = new Button(command);
		btnGui.setActionCommand(command);
		btnListener = new ButtonWithGui(this);
		btnGui.addActionListener( btnListener );
		outEnvView.getEnv().addPanel(btnGui);
	}
 	
	public void pressed(){
		myButton.controlLogic(command);
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		this.pressed();
    }
	
	
	
 }