	public void createGuiLed(int pinNum ){
		
		led = new LedWithGui();		
		outEnvView.getEnv().addPanel((Panel)led);
	}
		
	public void switchLedState(){
		led.ledSwitch();
		System.out.println("LED is " + (led.isOn()?"ON":"OFF"));
		
	}
	
	public void turnOff(){
		led.turnOff();
		System.out.println("LED is " + (led.isOn()?"ON":"OFF"));
	}
		
	
