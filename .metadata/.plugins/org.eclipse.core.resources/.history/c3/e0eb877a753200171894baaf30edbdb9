plan(1,init, sentence(true,move(print,mycontrol( starts)),'','' ))
plan(2,init, sentence(true,move( switchplan(work) ),'','' ))
plan(1,work, sentence(true,senseEvent(60000,"buttonEvent","continue"),'','' ))
plan(2,work, sentence(true,printCurrentEvent(false),'','' ))
plan(3,work, sentence(true,eventswitch(buttonEvent, »buttonEvent( X), move( switchplan(startingGame) ) ),'','' ))
plan(4,work, sentence(true,repeatplan() ,'','' ))
plan(1,startingGame, sentence(true,forward(flashled, controlMessage,controlMessage( "stopFlash")),'','' ))
plan(2,startingGame, sentence(true,move(actorOp,resetScore,0,""),'','' ))
plan(3,startingGame, sentence(true,move( switchplan(pattern) ),'','' ))
plan(1,pattern, sentence(true,forward(myled, controlMessage,controlMessage( "startPattern")),'','' ))
plan(2,pattern, sentence(true,delay( 5000) ,'buttonEvent','gameOver' ))
plan(3,pattern, sentence(true,forward(myled, controlMessage,controlMessage( "stopPattern")),'','' ))
plan(4,pattern, sentence(true,move( switchplan(game) ),'','' ))
plan(1,game, sentence(true,move(print,"game"),'','' ))
plan(2,game, sentence(true,move(actorOp,saveStartTime,0,""),'','' ))
plan(3,game, sentence(true,senseEvent(5000,"buttonEvent","continue"),'','' ))
plan(4,game, sentence(true,eventswitch(buttonEvent, »buttonEvent( 24), forward(flashled, controlMessage,controlMessage( "goOn")) ),'','' ))
plan(5,game, sentence(true,eventswitch(buttonEvent, »buttonEvent( 24), move(actorOp,updateScore,0,"") ),'','' ))
plan(6,game, sentence(-  actorOpDone( OP,CurrentScore) ,move(print,currentScore( CurrentScore)),'','' ))
plan(7,game, sentence(-  tout( R,W) ,move( switchplan(gameOver) ),'','' ))
plan(8,game, sentence(true,move( switchplan(pattern) ),'','' ))
plan(1,gameOver, sentence(true,forward(flashled, controlMessage,controlMessage( "gameOver")),'','' ))
plan(2,gameOver, sentence(true,forward(myled, controlMessage,controlMessage( "gameOver")),'','' ))
plan(3,gameOver, sentence(true,move(actorOp,printScore,0,""),'','' ))
plan(4,gameOver, sentence(-  actorOpDone( OP,FinalScore) ,move(print,finalScore( FinalScore)),'','' ))
plan(5,gameOver, sentence(true,move(print,mycontrol( stops)),'','' ))
