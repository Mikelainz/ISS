package it.unibo.mybutton;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
/*
 * ----------------------------------------------------------------
 * GOAL: an ActionListener that keeps track of the last event
* ----------------------------------------------------------------
 */
public class ButtonWithGui implements ActionListener, IButton {
	
	private Mybutton button = null;
	private String command;
	
	public ButtonWithGui(Mybutton button, String command){
		this.command = command;
		this.button = button;
	}
 	
	public void pressed(){
		button.controlLogic(command);
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		this.pressed();
    }
	
 }